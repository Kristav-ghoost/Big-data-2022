<canvas id="can" width="400" height="150"></canvas>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js" integrity="sha512-QSkVNOCYLtj73J4hbmVoOV6KVZuMluZlioC+trLpewV8qMjsWqlIQvkn1KGX2StWvPMdWGBqim1xlC8krl1EKQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
const ctx = document.getElementById('can').getContext('2d');
const myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: [
        {{#each dat}}
            {{#each data}}
                {{#if (eq ../_id ../../idData)}}
                    '{{lat}}|{{lng}}',
                {{/if}}
            {{/each}}
        {{/each}}
        ],
        datasets: [{
            label: '# power',
            data: [
            {{#each dat}}
                {{#each data}}
                    {{#if (eq ../_id ../../idData)}}
                        {{pow}},
                    {{/if}}
                {{/each}}
            {{/each}}
            ],
            backgroundColor: [
                {{#each dat}}
                    {{#each data}}
                        {{#if (eq ../_id ../../idData)}}
                            'rgba(255, 99, 132, 0.2)',
                        {{/if}}
                    {{/each}}
                {{/each}}
            ],
            borderColor: [
                {{#each dat}}
                    {{#each data}}
                        {{#if (eq ../_id ../../idData)}}
                            'rgba(255, 99, 132, 0.2)',
                        {{/if}}
                    {{/each}}
                {{/each}}
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});
</script>